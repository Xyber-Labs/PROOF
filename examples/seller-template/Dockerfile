## This dockerfile is a template for all Seller agents
## It can be used as is or edited to fit your needs


FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS builder

WORKDIR /app

ENV UV_LINK_MODE=copy

# TODO: remove content core sdk dependency
# Enable bytecode compilation: longer builds but faster startup
ENV UV_COMPILE_BYTECODE=1

# Declare build arguments
ARG UV_INDEX_GITLAB_USERNAME=__token__
ARG UV_INDEX_GITLAB_PASSWORD

# Set them to environment variables
ENV UV_INDEX_GITLAB_USERNAME=${UV_INDEX_GITLAB_USERNAME}
ENV UV_INDEX_GITLAB_PASSWORD=${UV_INDEX_GITLAB_PASSWORD}

# Install project dependencies using mounted uv.lock (ensure it exists locally)
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --frozen --no-install-project --no-dev --no-editable

# Install the project itself (done for layer caching optimization)
ADD . /app
# Copy tool_pricing.yaml to app directory for x402 middleware
COPY tool_pricing.yaml /app/tool_pricing.yaml
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-dev --no-editable

# --- Dev stage --- #
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS dev

WORKDIR /app

ENV UV_LINK_MODE=copy
ENV UV_COMPILE_BYTECODE=1

COPY --from=builder /app/.venv /app/.venv

# Additionally install dev and debug dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --frozen --no-install-project --group dev --group debug

COPY --from=builder /app/tool_pricing.yaml /app/tool_pricing.yaml

# Make container use python installed inside the venv
ENV PATH="/app/.venv/bin:$PATH"


CMD ["tail", "-f", "/dev/null"]

# --- Production stage --- #
FROM python:3.12-slim-bookworm AS prod

WORKDIR /app

COPY --from=builder /app/.venv /app/.venv

COPY --from=builder /app/tool_pricing.yaml /app/tool_pricing.yaml

ENV PATH="/app/.venv/bin:$PATH"

EXPOSE 8001

CMD ["python", "-m", "seller_template", "--host", "0.0.0.0", "--port", "8001"]