# Buyer Example Configuration

# Service Configuration
HOST=0.0.0.0
PORT=8003

# MarketplaceBK Configuration
MARKETPLACE_BASE_URL=http://marketplace:8000
MARKETPLACE_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Required: Set GOOGLE_API_KEYS for Google models or TOGETHER_API_KEYS for Together AI
GOOGLE_API_KEYS='["your-google-api-key"]'
# TOGETHER_API_KEYS='["your-together-api-key"]'

LLM_MODEL=gemini-2.0-flash

# Budget Configuration
# BUDGET_RANGE=[10.0, 100.0]

# Polling Configuration
POLL_INTERVAL_SECONDS=2.0
MAX_POLLS=30

# Seller Communication
SELLER_REQUEST_TIMEOUT_SECONDS=60
SELLER_MAX_RETRIES=3
SELLER_RETRY_BACKOFF_SECONDS=2.0
SELLER_TLS_VERIFY_STRICT=True

# -----------------------------------------------------------------------------
# x402 Payment Configuration (for x402HttpxClient)
# -----------------------------------------------------------------------------
# Private key for the wallet that will be used to pay for services from sellers.
# IMPORTANT: This should be a wallet with funds for making payments.
BUYER_X402_WALLET_PRIVATE_KEY=0x...

# Logging
LOGGING_LEVEL=INFO
